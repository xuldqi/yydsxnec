<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_10"
    android:background="#F5F5F5"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/padding_10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/miao_biao_time"
            android:text="00:00"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="58sp"
            android:layout_width="163dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/miao_biao_time_mills"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text=".00"
            android:layout_toRightOf="@id/miao_biao_time"
            android:layout_alignBottom="@id/miao_biao_time"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="58sp"/>
    </LinearLayout>
    <com.dn.sports.view.OverScrollView
        android:padding="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:id="@+id/record_list"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.dn.sports.view.OverScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/da_biao"
            android:src="@mipmap/da_biao"
            android:visibility="gone"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="85dp"
            android:layout_height="85dp"/>
        <ImageView
            android:id="@+id/start_or_pause"
            android:src="@mipmap/start"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="85dp"
            android:layout_height="85dp"/>
        <ImageView
            android:id="@+id/stop"
            android:src="@mipmap/stop"
            android:visibility="gone"

            tools:visibility="visible"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="85dp"
            android:layout_height="85dp"/>
    </LinearLayout>
</LinearLayout>