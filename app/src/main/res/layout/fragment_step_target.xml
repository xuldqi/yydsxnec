<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#E2E2E2"
        android:gravity="center"
        android:orientation="horizontal"
        app:bl_corners_radius="6dp"
        app:bl_solid_color="#E2E2E2"
        app:bl_stroke_color="#E2E2E2">

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="#494949"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:text="公里"
            android:textColor="#4B4B4B"
            android:textSize="20dp" />

    </LinearLayout>


    <com.dn.sports.view.CustomWheelView
        android:id="@+id/customView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        app:wv_normalTextColor="#AFAFAF"
        app:wv_selectedTextColor="#494949"
        app:wv_textSize="56dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/btConfirm"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:bl_corners_radius="40dp"
        app:bl_solid_color="#F37866"

        />


</LinearLayout>