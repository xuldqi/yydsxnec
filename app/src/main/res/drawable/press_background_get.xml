<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/get_coin_back" />
            <corners
                android:bottomLeftRadius="@dimen/padding_20"
                android:bottomRightRadius="@dimen/padding_20"
                android:topLeftRadius="@dimen/padding_20"
                android:topRightRadius="@dimen/padding_20" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/gray" />
            <corners
                android:bottomLeftRadius="@dimen/padding_20"
                android:bottomRightRadius="@dimen/padding_20"
                android:topLeftRadius="@dimen/padding_20"
                android:topRightRadius="@dimen/padding_20" />
        </shape>
    </item>
</selector>